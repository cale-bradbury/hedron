{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "__DEV__"               : false,
    "__TEST__"              : false,
    "__PROD__"              : false,
    "__COVERAGE__"          : false,
    "__DEFAULT_PROJECT__"   : false,
    "nw"                    : false
  },
  "rules": {
    "key-spacing"          : 0,
    "jsx-quotes"           : [2, "prefer-single"],
    "max-len"              : [2, 120, 2],
    "object-curly-spacing" : [2, "always"],
    "no-var"               : 2,
    "comma-dangle"         : [2, "always-multiline"],
    "no-console"           : [2, { allow: ["warn", "error"] }]
  }
}
